pipeline {
    agent any
    stage('Initialize')
    {
        def dockerHome = tool 'MyDocker'
        def mavenHome  = tool 'MyMaven'
        env.PATH = "${dockerHome}/bin:${mavenHome}/bin:${env.PATH}"
    }

    stages {
        stage('Build docker Image') {
            steps {
                echo 'Building..'
                sh 'docker build -t apoojary/hello_python:0.0.0 .'        
            }
        }
        stage('Push docker Image') {
            steps {
                echo 'Pushing..'
                sh 'docker Push -t apoojary/hello_python:0.0.0 .'        
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
