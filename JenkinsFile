pipeline {
    agent {
        dockerfile true 
    }


    stages {
        stage('Check docker present') {
            steps {
                echo 'checking..'
                sh '/usr/local/bin/docker version'        
            }
         }
        stage('Build docker Image') {
            steps {
                echo 'Building..'
                sh '/usr/local/bin/docker build -t apoojary/hello_python:0.0.0 .'        
            }
        }
        stage('Push docker Image') {
            steps {
                echo 'Pushing..'
                sh '/usr/local/bin/docker Push -t apoojary/hello_python:0.0.0 .'        
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
